{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "options": {
        "cwd": "${workspaceFolder}/build"
    },
    "tasks": [
        {
            "label": "cmake",
            "command": "cmake -G 'Unix Makefiles' -DCMAKE_BUILD_TYPE=Debug ..",
            "type": "shell",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "panel": "shared"
            },
            "options": {
                "shell": {
                    "executable": "/bin/bash",
                    "args": ["-c", "cmake -G 'Unix Makefiles' -DCMAKE_BUILD_TYPE=Debug .."]
                }
            }
        },
        {
            "label": "make",
            "command": "make -j 8",
            "type": "shell",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "panel": "shared"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "options": {
                "shell": {
                    "executable": "/bin/bash",
                    "args": ["-c", "make -j 8"]
                }
            }
        }
    ]
}
